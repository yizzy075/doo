    <groupId>co.edu.uco.nose</groupId>
    <artifactId>api-nose</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>ApiNose</name>
    <description>
        API que expone servicios REST para la aplicaci√≥n Nose.
    </description>

    <properties>
